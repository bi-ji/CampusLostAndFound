<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/details_lost_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:orientation="vertical" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/postlostmessage_header_image"
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:src="@drawable/circle_gray" />

                <TextView
                    android:id="@id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="85.0dip"
                    android:layout_marginTop="15.0dip"
                    android:layout_toRightOf="@id/postlostmessage_header_image"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="昵称好长好长好长好长好长啊"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/postlostmessage_publishtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nickname"
                    android:layout_marginLeft="90.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="发布时间：2016年4月11日 "
                    android:textColor="#ff808080"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/postlostmessage_label"
                    android:layout_width="56.0dip"
                    android:layout_height="78.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/lable_car_num_two"
                    android:gravity="center" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF909090"/>


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postlostmessage_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="丢失红米手机一部"
                    android:textColor="#ffa2793e"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:background="@drawable/clock_num"
                    android:text=""
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/lost_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="2015-04-15 23:43:59"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:background="@drawable/map_num"
                    android:text=""
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/lost_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:gravity="top"
                    android:singleLine="false"
                    android:text="北京"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:background="@drawable/details_num"
                    android:text=""
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/lost_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:gravity="top"
                    android:singleLine="false"
                    android:text="丢了手机一部，快还我"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="130.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lost_picture_image1"
                    android:layout_width="115.0dip"
                    android:layout_height="130.0dip"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/meinv" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleattention_detailsost"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="浏览量  "
                    android:textColor="#ff808080"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/titleattentionno_detailsost"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#ff808080"
                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="   "
                    android:textColor="#ff808080"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/personlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="吉林大学南湖校区通信工程学院覃宏艺"
                    android:textColor="#ff808080"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF909090"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@+id/phone_number_detailsost"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="电话" />

                <TextView
                    android:id="@+id/message_detailsost"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="短信" />

                <TextView
                    android:id="@+id/comment_detailsost"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="评论" />

                <TextView
                    android:id="@+id/share_detailslost"
                    android:layout_width="0.0dip"
                    android:layout_height="35.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="分享" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="10.0dip"
                android:background="#ffd3d3d3"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ff808080"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#ff808080"
                android:orientation="horizontal" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>