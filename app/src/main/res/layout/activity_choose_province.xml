<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/lv_choose_province"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:divider="@null"
            android:paddingTop="55.0dip" />

        <TextView
            android:id="@id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/show_head_toast_bg"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center|right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:orientation="horizontal" />

            <com.edu.claf.view.SideBar
                android:id="@+id/sidebar_choose_province"
                android:layout_width="30.0dip"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_chooseprovince"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="#ff36cd00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="选择省份"
                android:textColor="#ffffffff"
                android:textSize="20.0sp" />

            <ImageButton
                android:id="@+id/ib_chooseprovince_back"
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#00808080"
                android:contentDescription="@null"
                android:src="@drawable/arrow_left_gray_white" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>